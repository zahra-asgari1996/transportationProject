<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <filter>
        <filter-name>f1</filter-name>
        <filter-class>com.example.transportationProject.filters.emailAndUserNameFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>f1</filter-name>
        <url-pattern>/signUpCustomer</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>s1</servlet-name>
        <servlet-class>com.example.transportationProject.servlet.signUpCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>s1</servlet-name>
        <url-pattern>/signUpCustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>s2</servlet-name>
        <servlet-class>com.example.transportationProject.servlet.SignInCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>s2</servlet-name>
        <url-pattern>/signInCustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>s3</servlet-name>
        <servlet-class>com.example.transportationProject.servlet.SaveNewPacketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>s3</servlet-name>
        <url-pattern>/newPacket</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>s4</servlet-name>
        <servlet-class>com.example.transportationProject.servlet.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>s4</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>f2</filter-name>
        <filter-class>com.example.transportationProject.filters.emailAndUserNameFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>f2</filter-name>
        <url-pattern>/signUpCustomer</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>s</servlet-name>
        <servlet-class>com.example.transportationProject.servlet.OrderTrackingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>s</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>



</web-app>